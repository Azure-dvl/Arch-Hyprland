{
"layer": "top",
"position": "top",
"height": 10,
"margin-bottom":0,
"margin-top":0,

"modules-left": ["cpu","memory"],
"modules-center": ["sway/workspaces","hyprland/workspaces"],
"modules-right":  ["pulseaudio","backlight","clock"],

"hyprland/workspaces": {
     "sort-by-name": true,
     "on-click": "activate"
},
"hyprland/window": {
    "max-length": 200,
    "separate-outputs": true
},
"sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
},
"clock": {
    "locale": "C", 
    "format": " {:%I:%M %p}",
    "format-alt": " {:%a,%b %d}" // Icon: calendar-alt
},
"cpu": {
    "format": "&#8239; {usage}%",
    "tooltip": false,
    "on-click": "kitty -e 'htop'"
},
"memory": {
    "interval": 30,
    "format": " {used:0.2f}GB",
    "max-length": 10,
    "tooltip": false,
    "warning": 70,
    "critical": 90
},
"network": {
  "interval": 2,
  "format-wifi": " {signalStrength}%",
  "format-ethernet": "",
  "format-linked": " {ipaddr}",
  "format-disconnected": " Disconnected",
  "format-disabled": "",
  "tooltip": false,
  "max-length": 20,
  "min-length": 6,
  "format-alt": "{essid}"
},
"pulseaudio": {
  // "scroll-step": 1, // %, can be a float
  "format": "{icon} {volume}% {format_source}",
  "format-bluetooth": "{icon}  {volume}% {format_source}",
  "format-bluetooth-muted": " {format_source}",
  "format-muted": "  {format_source}",
  "format-source": " {volume}%",
  "format-source-muted": "",
  "format-icons": {
    "headphone": "",
    "hands-free": "",
    "headset": "🎧",
    "phone": "",
    "portable": "",
    "car": "",
    "default": ["", "", ""]
  },
  "on-click": "pavucontrol"
}
}
